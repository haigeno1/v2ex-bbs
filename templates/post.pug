extends layout.pug
block content
    div 
        h1= post.title
        h3
            span= new Date(post.timestamp).toLocaleString()
            |    
            span people who post is #{post.userId}
        div= post.content
    ul  
        each comment in comments
            li
                div
                    span= new Date(comment.timestamp).toLocaleString()
                    img(width=20 height=20 src="/avatars/"+comment.avatar)
                    span
                        |  
                        a(href="/user/"+comment.userId)= comment.name
                div= comment.content
    form(action="/add-comment" method="post" )
        input(hidden=true name="postId" value= post.id)
        textarea(name="content")
        br
        button(type="submit") 提交